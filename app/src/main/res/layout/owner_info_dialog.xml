<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="OWNER INFORMATION"
        android:textSize="18sp"
        android:textStyle="normal" />
    <View
        android:id="@+id/SplitLine_hor4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Product2"
        android:layout_gravity="bottom"
        android:layout_marginTop="2dp"
        android:background="#bebebe" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/ownerInfoDialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
        android:text="Owner name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ownerInfoDialog_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="Job title"
        android:textSize="14sp"
        android:textStyle="normal" />

<!--
    <TextView
        android:id="@+id/ownerInfoDialog_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="Job title"
        android:textSize="14sp"
        android:textStyle="normal" />-->



    <TextView
        android:id="@+id/ownerInfoDialog_homeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:text="Address"
        android:textSize="16sp"
        android:textStyle="normal" />
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has  "
            android:textSize="15sp"
            android:textStyle="normal" />
    <TextView
        android:id="@+id/ownerInfoDialog_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="19sp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  points"
            android:textSize="15sp"
            android:textStyle="normal" />
    </LinearLayout>
    <View
        android:id="@+id/SplitLine_hor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="2dp"
        android:background="#bebebe" />

    <TextView
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:id="@+id/ownerInfoDialog_Button_call"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call"/>
    <View
        android:id="@+id/SplitLine_hor88"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="2dp"
        android:background="#bebebe" />

    <TextView
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:id="@+id/ownerInfoDialog_Button_ok"
        android:layout_marginTop="5dp"
      
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok"
        />

</LinearLayout>