<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"

    tools:context="com.example.khalid.sharektest.AddIntrest">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
    <TextView
        android:textSize="11sp"
        android:gravity="center_horizontal"
        android:id="@+id/View3"
        android:text="add something (product or service) you are interested in "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/View3"
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addInterest_textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:text="Interest title" />

            <EditText
                android:id="@+id/addInterest_editText_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:hint="Interest title"
                android:textSize="10sp" />
            <TextView
                android:textSize="7sp"
                android:textColor="#d63838"
                android:text="*at least 8 character, you can write in arabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    <LinearLayout
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addInterest_textView_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:text="Description" />
        <EditText
            android:id="@+id/addInterest_editText_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:hint="Put details about product and yourself more"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tag1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Description"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/Tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addInterest_textView_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:inputType="textPersonName"
                android:text="Tags"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addInterest_editText_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginRight="10dp"
                android:hint="#tag"
                android:textSize="8sp" />
            <TextView
                android:textSize="7sp"
                android:textColor="#d63838"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*it should be in english ,ex: books,electronics,home_tools"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/Pieces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addInterest_textView_Pieces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:inputType="textPersonName"
                android:text="Pieces"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addInterest_editText_Pieces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="Number of pieces"
                android:inputType="date"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Price1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tag1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addInterest_textView_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Max.Price"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addInterest_editText_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="EGP"
                android:inputType="date"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/Duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addInterest_textView_Dusration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Duration"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addInterest_editText_Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="Number of days"
                android:inputType="date"
                android:textSize="8sp" />
            <TextView
                android:text="*Max: 30 days "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:textColor="#d63838"
                />
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/addInterest_textView_availableDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Price1"
            android:layout_marginTop="15dp"
            android:text="Payment methods" />
    <LinearLayout
        android:id="@+id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addInterest_textView_availableDays"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addInterest_textView_Sat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ÙŒInsurance"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addInterest_editText_guarantee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="LE"
                android:inputType="number"
                android:textSize="10sp" />
            <TextView
                android:text="it will be returned to the owner after finishing the sharing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:textColor="#d63838"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addInterest_textView_nog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Negotiable"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/addInterest_switch_Negotiable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/From"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addInterest_textView_fromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="From date" />

                <EditText
                    android:id="@+id/addInterest_editText_fromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="dd/mm/yy"
                    android:inputType="date"
                    android:textSize="10sp">

                </EditText>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addInterest_textView_toDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="To date" />

                <EditText
                    android:id="@+id/addInterest_editText_toDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="dd/mm/yy"
                    android:inputType="date"
                    android:textSize="10sp">

                </EditText>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/From"
            android:layout_marginTop="20dp"
            android:visibility="gone">
        <CheckBox
            android:id="@+id/addInterest_checkBox_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="I agree to the terms and conditions." />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Terms"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/addInterest_button_postInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="#d16a25"
                android:text="  Interest "
                android:textColor="#FFFF" />

            <Button
                android:id="@+id/addInterest_button_addPhote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#34cc99"
                android:text="  Add Image  "
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>