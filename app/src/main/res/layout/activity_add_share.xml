<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    tools:context="com.example.khalid.sharektest.AddShare">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <TextView
            android:textSize="11sp"
            android:gravity="center_horizontal"
            android:id="@+id/View3"
            android:text="add something (product or service) you have to share with others "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addShare_textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share title" />

            <EditText
                android:id="@+id/addShare_editText_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Share title"
                android:textSize="10sp" />
            <TextView
                android:text="*at least 8 characters ,you can write in arabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:textColor="#d63838"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addShare_textView_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Description" />

        <EditText
            android:id="@+id/addShare_editText_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Put details about product and yourself more"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tag1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Description"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/Tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addShare_textView_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Tags"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addShare_editText_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="#tag"
                android:inputType="textPersonName"
                android:textSize="8sp" />

            <TextView
                android:textSize="7sp"
                android:textColor="#d63838"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*it should be in english ,ex: books,electronics,home_tools"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/Pieces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addShare_textView_Pieces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Pieces"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addShare_editText_Pieces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="Number of pieces"
                android:inputType="date"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Price1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tag1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addShare_textView_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Price"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addShare_editText_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="EGP"
                android:inputType="number"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/Duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addShare_textView_Dusration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Duration"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/addShare_editText_Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="Number of days"
                android:inputType="number"
                android:textSize="8sp" />
            <TextView
                android:text="*Max: 30 days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:textColor="#d63838"
                />
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/addInterest_textView_availableDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Price1"
            android:layout_marginTop="15dp"
            android:text="Payment methods"
            />

        <LinearLayout
            android:background="#f2f2f2"
            android:id="@+id/checkbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addInterest_textView_availableDays"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addShare_textView_quarantee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Insurance"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addShare_editText_guarantee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="LE"
                    android:inputType="number"
                    android:textSize="10sp" />
                <TextView
                    android:text="it will be returned to the owner after finishing the sharing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="7sp"
                    android:textColor="#d63838"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addInterest_textView_Sat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Negotiable"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/addShare_editText_Negotiable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/From"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addShare_textView_fromDate"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:text="From date" />

            <Button
                android:id="@+id/addShare_Button_fromDate"
                android:layout_width="33dp"
                android:layout_height="27dp"
                android:background="@drawable/ic_date_range_black_24dp"
                android:inputType="date"
                android:textSize="10sp">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addShare_Text_fromDate"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:hint="dd/mm/yy"
                android:inputType="date"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/Terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/From"
            android:layout_marginTop="20dp"
            android:visibility="gone">
        <CheckBox
            android:id="@+id/addShare_checkBox_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="I agree to the terms and conditions." />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Terms"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/addShare_button_postShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#d24b1e"
                android:text="  Share   "
                android:textColor="@color/white" />

            <Button
                android:id="@+id/addShare_button_addImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#34cc99"
                android:text="  Add Image  " />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>