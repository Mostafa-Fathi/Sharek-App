<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/View"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_gravity="center"
            android:id="@+id/productItem_image_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:src="@drawable/blank_photo" />
        <LinearLayout
            android:padding="3dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:paddingBottom="9dp"
                android:gravity="left"
                android:layout_weight="1"
                android:id="@+id/productItem_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:paddingRight="10dp"
                android:text="product Title"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:padding="5dp"
                android:paddingRight="10dp"
                android:id="@+id/productItem_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="#e2311d"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_marginRight="20dp"
            android:id="@+id/productItem_description_textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/productItem_title_textView"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"

            android:layout_weight="0.52"
            android:text="you can write any bala7 here"
            android:textColor="#8c8c8c"
            android:textSize="13sp"/>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:paddingRight="10dp"
                    android:text="Fayoum"
                    android:textColor="#FF8C8C8C"
                    android:textSize="13sp" />

                <TextView
                    android:padding="5dp"
                    android:paddingRight="10dp"
                    android:id="@+id/productItem_duration_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textColor="#e2311d"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>